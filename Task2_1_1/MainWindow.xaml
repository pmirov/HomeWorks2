<Window x:Class="Task2_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_1_1"
        mc:Ignorable="d"
        Title="Счетчик кликов" Height="200" Width="250">
    <Grid>
        <Button 
            Name="Button"
            Content="Кликни меня" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="60,90,0,0" 
            FontSize="14" 
            Width="120" 
            Height="30" 
            Click="Button_Click" />
        <TextBlock 
            Name="TextBlock"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="115,50,0,0" 
            TextWrapping="Wrap" 
            Text="0" 
            FontSize="18" />


    </Grid>
</Window>
