<Window x:Class="Task2_2.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_2"
        mc:Ignorable="d"
        Title="О программе" Height="280" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Простой текстовый редактор" TextAlignment="Center" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10"/>
        <Image Source="img/photo.jpg" Width="100" Margin="0,0,0,15"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Автор: Мировщиков Павел Валерьевич" Grid.Row="0" Grid.Column="1" FontSize="12"/>
            <TextBlock Text="Версия: 1.0" Grid.Row="1" Grid.Column="1" FontSize="12"/>
            <TextBlock Text="Дата создания: 07.08.2025" Grid.Row="2" Grid.Column="1" FontSize="12"/>
        </Grid>
        <Button Content="Закрыть" Margin="0,20,0,0" Width="120" Height="20" Click="Button_Click" />
    </StackPanel>
</Window>
