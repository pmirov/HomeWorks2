<Window x:Class="Task2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_2"
        mc:Ignorable="d"
        Title="Простой текстовый редактор" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
       
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Button Name="Open" Content="Открыть" Margin="10" Width="100" Click="Open_Click"/>
                <Button Name="Save" Content="Сохранить как" Margin="10" Width="100" Click="Save_Click"/>
                <Button Content="О программе" Margin="10" Width="100" Click="Button_Click"/>
            </StackPanel>
        
        <TextBox 
            Name ="textBox"
            Grid.Row="1" 
            Text="Введите текст..." 
            TextWrapping="Wrap" 
            AcceptsReturn="True" 
            AcceptsTab="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto" PreviewMouseDown="textBox_PreviewMouseDown" />
        <StatusBar Grid.Row="2" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock Name="Status" Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
